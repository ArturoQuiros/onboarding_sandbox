# =========================
# Etapa 1: Build
# =========================
FROM node:23-alpine AS build

WORKDIR /app

# Copiar dependencias y restaurar
COPY package*.json ./
RUN npm ci

# Copiar el c칩digo fuente
COPY . .

# Construir la aplicaci칩n
RUN npm run build

# =========================
# Etapa 2: Servidor est치tico
# =========================
FROM nginx:stable-alpine AS production

# Copiar los archivos est치ticos generados al contenedor Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Exponer el puerto (Nginx por defecto usa 80)
EXPOSE 80

# Iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]